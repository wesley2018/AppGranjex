<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wl.granjex2.CadastroUsuario"
    android:background="@drawable/fundomadeira">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


    <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Nome"
            android:id="@+id/CDUlblNome"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/CDUtxtNome"
            android:inputType="textCapSentences"
            android:layout_below="@+id/CDUlblNome"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Senha"
            android:id="@+id/CDUlblSenha"
            android:layout_marginTop="27dp"
            android:layout_below="@+id/CDUtxtNome"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/CDUtxtSenha"
            android:inputType="textPassword"
            android:layout_below="@+id/CDUlblSenha"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Administrador"
            android:id="@+id/CDUcbAdministrador"
            android:layout_below="@+id/CDUtxtSenha"
            android:checked="false"
            android:layout_marginTop="20dp"/>

        <Button
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salvar"
            android:id="@+id/CDUbtnSalvar"
            android:layout_marginTop="20dp"
            android:background="@drawable/botaoligado"
            android:textSize="18dp"
            android:layout_below="@+id/CDUcbAdministrador"/>

        <Spinner
            android:layout_width="183dp"
            android:layout_height="wrap_content"
            android:id="@+id/CDUspNome"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/botaodesligado"
            android:minHeight="50dp"
            android:minWidth="50dp"
            android:layout_below="@+id/CDUbtnSalvar"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textAlignment="center"
            android:layout_marginTop="22dp"/>

        <Button
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Excluir"
            android:id="@+id/CDUbtnExcluir"
            android:background="@drawable/botaoredondo"
            android:textSize="18dp"
            android:layout_marginTop="22dp"
            android:layout_below="@+id/CDUspNome"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="UsuÃ¡rio selecionado:"
            android:id="@+id/CDUlblUsuarioSelecionado"
            android:textSize="15dp"
            android:layout_marginTop="35dp"
            android:layout_below="@+id/CDUbtnSalvar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
    </ScrollView>
</RelativeLayout>
