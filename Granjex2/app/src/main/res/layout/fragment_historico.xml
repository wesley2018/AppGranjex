<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wl.granjex2.Historico"
    android:background="@drawable/fundomadeira">

    <Spinner
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/HistoricoSpGranja"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/botaodesligado"
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:textAlignment="center"
        android:layout_below="@+id/textView27"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView5"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Granja"
        android:id="@+id/textView27"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Consultar"
        android:id="@+id/Historico_btnConsultar"
        android:background="@drawable/botaoredondo"
        android:textSize="18dp"
        android:layout_below="@+id/HistoricoSpGranja"
        android:layout_alignLeft="@+id/HistoricoSpGranja"
        android:layout_alignStart="@+id/HistoricoSpGranja"
        android:layout_marginTop="5dp"
        android:textColor="#ffffff"
        android:layout_toLeftOf="@+id/textView27"
        android:layout_toStartOf="@+id/textView27" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Excluir"
        android:id="@+id/Historico_btnExcluir"
        android:layout_below="@+id/HistoricoSpGranja"
        android:layout_alignRight="@+id/HistoricoSpGranja"
        android:layout_alignEnd="@+id/HistoricoSpGranja"
        android:background="@drawable/botaoredondo"
        android:layout_toRightOf="@+id/textView27"
        android:layout_toEndOf="@+id/textView27"
        android:textColor="#ffffff"
        android:layout_marginTop="5dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView6"
        android:layout_below="@+id/Historico_btnConsultar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="378dp"
                android:id="@+id/listaHistorico"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
