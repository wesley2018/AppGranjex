<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wl.granjex2.CadastroGranja"
    android:background="@drawable/fundomadeira">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="IP"
                android:id="@+id/CDGlblIP"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/CDGtxtIP"
                android:inputType="phone"
                android:layout_below="@+id/CDGlblIP"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Nome da Granja"
                android:id="@+id/CDGlblNomeDaGranja"
                android:layout_marginTop="22dp"
                android:layout_below="@+id/CDGtxtIP"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/CDGtxtNomeGranja"
                android:inputType="textCapWords"
                android:layout_below="@+id/CDGlblNomeDaGranja"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Salvar"
                android:id="@+id/CDGbtnSalvar"
                android:layout_marginTop="22dp"
                android:background="@drawable/botaoligado"
                android:layout_below="@+id/CDGtxtNomeGranja"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Granja Selecionada:"
                android:id="@+id/CDGlblGranjaSelecionada"
                android:layout_marginTop="35dp"
                android:layout_below="@+id/CDGbtnSalvar"
                android:textSize="15dp"/>

            <Spinner
                android:layout_width="183dp"
                android:layout_height="wrap_content"
                android:id="@+id/CDGspNome"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/CDGbtnSalvar"
                android:layout_marginTop="22dp"
                android:minHeight="50dp"
                android:minWidth="50dp"
                android:background="@drawable/botaodesligado"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textAlignment="center"/>



            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Excluir"
                android:id="@+id/CDGbtnExcluir"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="22dp"
                android:background="@drawable/botaoredondo"
                android:layout_below="@+id/CDGspNome"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
